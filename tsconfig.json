{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es2018",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "lib": [
      "es7",
      "dom"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "baseUrl": "src",
    "jsx": "react",
    "paths": {
      "*": [
        "src/components/*",
        "src/*",
        "./*"
      ],
      "src": [
        "/src"
      ]
    }
  },
  // 排除列表
  "exclude": [
    "node_modules",
    "public",
    "ios",
    "android",
    "doc"
  ],
  // 指定一个匹配列表
  "include": [
    "src/*",
    "src/components",
  ],
}